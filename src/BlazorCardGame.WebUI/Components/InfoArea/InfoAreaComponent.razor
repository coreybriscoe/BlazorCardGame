@namespace BlazorCardGame.WebUI.Components.InfoArea
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using BlazorCardGame.WebUI.Components.InfoArea

<div id="info-area">
    <div id="progress-cell" class="@("flex-row" + GetInfoAreaBackgroundColor(GameService.GetPhase()))">
        <div class="flex-1 cell cell-color">
            Ante <span class="@("big-number" + GetInfoAreaColor(GameService.GetPhase()))">@GameService.GetAnte()</span>/8
        </div>
        <div class="flex-3"><span class="big-number bold">@GetPhaseTitle()</span></div>
        <div class="flex-1 cell cell-color">Round <span class="@("big-number" + GetInfoAreaColor(GameService.GetPhase()))">@GameService.GetRound()</span></div>
    </div>
    <PlayPhaseCellComponent />
    <div id="inventory-cell" class="inventory cell cell-color flex-row">
        <div class="colorbox-thin gold gold-border flex-center flex-1 bold big-number">$@GameService.GetCash()</div>
        <div class="colorbox-thin blue-border flex-row flex-1">
            <div class="flex-center"><span class="bold blue big-number">@GameService.GetHandsRemaining()</span> Hands</div>
        </div>
        <div class="colorbox-thin red-border flex-column flex-1">
            <div class="flex-center"><span class="bold red big-number">@GameService.GetDiscardsRemaining()</span> Discards</div>
        </div>
    </div>
    <div id="help-cell" class="cell cell-color flex-row">
        <div class="flex-center flex-1">
            <div class="button-small lime-bg flex-center">R</div>
        </div>
        <div class="flex-center flex-1">
            <div class="button-small pink-bg flex-center">?</div>
        </div>
        <div class="flex-center flex-1">
            <div class="button-small orange-bg flex-center">O</div>
        </div>
    </div>
</div>